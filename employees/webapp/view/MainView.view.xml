<mvc:View controllerName="logaligroup.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
               <HBox>
                    <Label id="labelEmployee" text="{i18n>labelEmployee}" class="sapuiSmallMargin" labelFor="inputEmployee"/>
                    <Input id="inputEmployee" value="{/EmployeeId}" maxLength="6" width="200px" class="sapUiSmallMarginEnd"/>
                    <Label id="labelCountry" labelFor="slCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin"/>
                    <Select id="slCountry" selectedKey="{/CountryKey}" items="{/ListCountry}" forceSelection="false">
                        <items>
                            <core:Item key="{Key}" text="{Text}"/>
                        </items>
                    </Select>
                    <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search"
                            press="onFilter" class="sapUiSmalMarginEnd"/>
                    <Button id="btnClearFilter" text="{i18n>btnFilter}" icon="sap-icon://clear-filter"
                            press="onClearFilter" class="sapUiSmalMarginEnd"/>
               </HBox>
               <HBox>
                    <Panel>
                        <Table id="tableEmployee" items="{/Employees}">
                            <columns>
                                <Column>
                                    <header><Label text="{i18n>tableId}"/></header>
                                </Column>
                            </columns>
                            <columns>
                                <Column>
                                    <header><Label text="{i18n>tableName}"/></header>
                                </Column>
                            </columns>
                            <columns>
                                <Column>
                                    <header><Label text="{i18n>tableCountry}"/></header>
                                </Column>
                            </columns>
                            <columns>
                                <Column>
                                    <header><Label text="{i18n>tableCity}"/></header>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem type="Active" press="showPostalCode">
                                    <cells>
                                        <Label text="{EmployeeID}"/>
                                        <Label text="{LastName}, {FirstName}"/>
                                        <Label text="{Country}"/>
                                        <Label text="{City}"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </Panel>
                </HBox>
          </content>
    </Page>
</mvc:View>