<mvc:View controllerName="logaligroup.employees.controller.MasterEmployee"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
               <HBox wrap="Wrap">
                    <Label id="labelEmployee" text="{i18n>labelEmployee}" class="sapuiSmallMargin sapMFlexItem" labelFor="inputEmployee"/>
                    <Input id="inputEmployee" value="{jsonCountries>/EmployeeId}" maxLength="6" width="200px" class="sapUiSmallMarginBegin"/>
                    <Label id="labelCountry" labelFor="slCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin sapMFlexItem"/>
                    <Select id="slCountry" selectedKey="{jsonCountries>/CountryKey}" items="{jsonCountries>/ListCountry}" forceSelection="false">
                        <items>
                            <core:Item key="{jsonCountries>Key}" text="{jsonCountries>Text}"/>
                        </items>
                    </Select>
                    <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search"
                            press="onFilter" class="sapUiSmalMarginEnd"/>
                    <Button id="btnClearFilter" text="{i18n>btnFilter}" icon="sap-icon://clear-filter"
                            press="onClearFilter" class="sapUiSmalMarginEnd"/>
               </HBox>
               <core:Fragment fragmentName="logaligroup.employees.fragment.TableEmployee" type="XML"/>
          </content>
    </Page>
</mvc:View>